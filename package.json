{
  "name": "letters",
  "version": "1.0.0",
  "description": "Buttondown newsletter sync system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "sync": "tsx apps/sync/index.ts sync",
    "sync:attachments": "tsx apps/sync/index.ts sync-attachments",
    "sync:status": "tsx apps/sync/index.ts status",
    "sync:info": "tsx apps/sync/index.ts info",
    "images:download": "tsx apps/sync/index.ts download-images",
    "images:localize": "tsx apps/sync/index.ts localize-images",
    "images:stats": "tsx apps/sync/index.ts image-stats",
    "images:analyze": "tsx scripts/analyze-images.ts",
    "images:compress": "tsx scripts/compress-images.ts",
    "db:vacuum": "tsx scripts/vacuum-db.ts",
    "db:analyze": "tsx scripts/analyze-db-space.ts",
    "export:email": "tsx scripts/export-email.ts",
    "inspect:email": "tsx scripts/inspect-email.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:migrate": "tsx scripts/migrate-schema.ts",
    "normalize:markdown": "tsx scripts/normalize-markdown.ts",
    "index:generate": "tsx scripts/generate-index.ts",
    "index:topics": "tsx scripts/generate-topic-index.ts",
    "index:view": "tsx scripts/view-index.ts",
    "kill-ports": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true; lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
    "reader": "npm run reader:build && tsx apps/reader/server/index.ts",
    "reader:dev": "cd apps/reader/client && vite",
    "reader:build": "cd apps/reader/client && vite build",
    "reader:server": "tsx apps/reader/server/index.ts",
    "dev": "npm run kill-ports && concurrently \"npm run reader:server\" \"npm run reader:dev\" --names \"server,client\" --prefix-colors \"blue,green\"",
    "dev:sync": "tsx --watch apps/sync/index.ts",
    "build": "tsc",
    "build:static": "tsx scripts/generate-static-site.ts",
    "build:deploy": "tsx scripts/build-deploy.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "buttondown",
    "newsletter",
    "sync",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/turndown": "^5.0.5",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "marked": "^15.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "sharp": "^0.34.4",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
